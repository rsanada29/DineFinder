{
  "expo": {
    "name": "DineFinder",
    "slug": "meshi-match",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "meshimatch",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.meshimatch.app",
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "DineFinder uses your location to find nearby restaurants.",
        "LSApplicationQueriesSchemes": ["mailto", "itms-apps"]
      },
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "$(GOOGLE_MAPS_API_KEY_IOS)"
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.meshimatch.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "$(GOOGLE_MAPS_API_KEY_ANDROID)"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "DineFinder uses your location to find nearby restaurants."
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#FF6B35",
          "image": "./assets/splash-icon.png",
          "imageWidth": 200
        }
      ],
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "DineFinder would like to access your photos to set your profile picture."
        }
      ],
      "expo-web-browser",
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
